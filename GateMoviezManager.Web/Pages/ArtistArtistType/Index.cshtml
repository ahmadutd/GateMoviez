@page
@model GateMoviezManager.Web.Pages.ArtistArtistType.IndexModel
@{

}
<div class="d-flex align-items-center rtl">
    <h4>فرم انتصاب نوع هنرمند </h4>
    <a asp-area="" asp-page="./Index" class="btn btn-info mr-auto">مشاهده لیست</a>
</div>
<hr />



<div class="rtl text-right">
    <form method="post">
        <div class="form-row mb-3 align-items-center">
            @* this select tag for artist model *@
            <div class="form-group col-12 col-md-3 col-lg-2">
                <label asp-for="@Model.Data.ArtistId"></label>
                <select asp-items="Model.artistselectlist" class="Js-Artist-Select  form-control form-control-sm" type="text" asp-for="@Model.Data.ArtistId"></select>
            </div>

            @* this select tag for artisttype model *@

            <div class="form-group col-12 col-md-3 col-lg-2">
                <label asp-for="@Model.Data.ArtistTypeId"></label>
                <select asp-items="Model.artisttypeselectlist" class="form-control form-control-sm" type="text" asp-for="@Model.Data.ArtistTypeId"></select>
            </div>
            <button type="submit" class="btn btn-success ">ذخیره</button>


        </div>
    </form>
</div>

<div class="row rtl">
    <div class="col">
        <table class="table table-sm table-bordered table-hover">
            <thead>
                <tr class="">
                    <th scope="col">#</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.DataList.First().Artist.FirstName)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.DataList.First().ArtistType.ArtistTypeName)</th>
                    <th scope="col" class="column-action">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.DataList != null)
                {
                    var i = 0;
                    @foreach (var item in Model.DataList)
                    {
                        ++i;

                        <tr>
                            <th scope="row">@i</th>
                            <td>@item.Artist.FirstName</td>
                            <td>@item.ArtistType.ArtistTypeName</td>

                            <td class="column-action">
                                <a asp-area="" asp-page="./Create" class="btn btn-sm btn-light"><i class="fas fa-pen"></i></a>
                                <a asp-area="" asp-page="./Create" class="btn btn-sm btn-light"><i class="fas fa-trash-alt"></i></a>


                            </td>
                        </tr>
                    };
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.Js-Artist-Select').select2();
        });
    </script>
}

@page
@model GateMoviezManager.Web.Pages.Tag.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="d-flex align-items-center rtl">
    <h4>فرم تولید برچسب </h4>
    <a asp-area="" asp-page="./Index" class="btn btn-info mr-auto">مشاهده لیست</a>
</div>
<hr />


<div asp-validation-summary="All"></div>
<div class="rtl text-right">
    <form method="post">
        <div class="form-row mb-3 align-items-center">
            <div class="form-group col-12 col-md-3 col-lg-2">
                <label asp-for="ArtistType.ArtistTypeName"></label>
                <input class="form-control form-control-sm" type="text" asp-for="ArtistType.ArtistTypeName" />
                <span asp-validation-for="ArtistType.ArtistTypeName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">ذخیره</button>


        </div>
    </form>
</div>

<div class="row rtl">
    <div class="col">
        <table class="table table-sm table-bordered table-hover">
            <thead>
                <tr class="">
                    <th scope="col">#</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.ArtistTypes[0].ArtistTypeName)</th>

                    <th scope="col" class="column-action">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ArtistTypes != null)
                {
                    var i = 0;
                    @foreach (var artistType in Model.ArtistTypes)
                    {
                        ++i;

                        <tr>
                            <th scope="row">@i</th>
                            <td>@artistType.ArtistTypeName</td>

                            <td class="column-action">
                                <a asp-area="" asp-page="./Create" class="btn btn-sm btn-light"><i class="fas fa-pen"></i></a>
                                <a asp-area="" asp-page="./Create" class="btn btn-sm btn-light"><i class="fas fa-trash-alt"></i></a>


                            </td>
                        </tr>
                    };
                }
            </tbody>
        </table>
    </div>
</div>

